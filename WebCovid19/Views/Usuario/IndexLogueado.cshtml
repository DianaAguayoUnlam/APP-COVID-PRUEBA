@model List<Entidades.Necesidades>
@{
    ViewBag.Title = "IndexLogueado";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}


<div class="container">
    <div class="card espace">
        <div class="card-body text-center black text-light t-15">
            Solicitemos ayuda a la gente <button type="button" class="btn btn-primary ml-3">Crear una Necesidad</button>
        </div>
    </div>

</div>
@if (Model == null)
{
    <h1>No hay necesidades cargadas</h1>
}
else
{
    @Html.Partial("PublicacionDeLaNecesidad", Model)
}